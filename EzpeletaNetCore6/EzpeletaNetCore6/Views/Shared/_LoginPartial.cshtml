@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://th.bing.com/th/id/OIP.CIlWtc-oEGSvqOdImfo3ogHaHa?pid=ImgDet&rs=1" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong>Usuario</strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item">Cerrar Sesión</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="nav nav-pills flex-column mb-auto">
        <li>
           
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
                <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle" /></svg>
                Registrarme</a>
        </li>


        <li>
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white">
                <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle" /></svg>
                Ingresar
            </a>
        </li>
    </ul>
}



